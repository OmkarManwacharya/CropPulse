@model CropDiseaseDetection.Models.Disease

<div class="container mt-5">
    <div class="card shadow-lg border-0">
        <div class="card-header bg-success text-white">
            <h3 class="mb-0">CropPulse Diagnostic Report</h3>
        </div>
        <div class="row g-0">
            <div class="col-md-5">
                <img src="@ViewBag.ImageUrl" class="img-fluid rounded-start" alt="Scanned Crop">
            </div>
            <div class="col-md-7">
                <div class="card-body">
                    <h2 class="text-success">@Model.DiseaseName</h2>
                    <hr />
                    <h5><strong>Affected Crop:</strong> @Model.Crop</h5>
                    
                    <div class="mt-3">
                        <h6><i class="bi bi-search"></i> <strong>Symptoms:</strong></h6>
                        <p class="text-muted">@Model.Symptoms</p>
                    </div>

                    <div class="alert alert-info mt-3">
                        <h6><i class="bi bi-capsule"></i> <strong>Recommended Treatment:</strong></h6>
                        <p>@Model.Treatment</p>
                    </div>

                    <div class="d-flex gap-2 mt-4">
                        <a href="/Disease/Upload" class="btn btn-outline-secondary">Scan New Crop</a>
                        <a href="/Contact/Index" class="btn btn-primary">Consult an Expert</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>